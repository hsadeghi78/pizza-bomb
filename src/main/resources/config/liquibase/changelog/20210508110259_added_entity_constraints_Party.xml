<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">
    <!--
        Added the constraints for entity Party.
    -->
    <changeSet id="20210508110259-2" author="jhipster">

        <addForeignKeyConstraint baseColumnNames="parent_id"
                                 baseTableName="party"
                                 constraintName="fk_party__parent_id"
                                 referencedColumnNames="id"
                                 referencedTableName="party"/>

        <addForeignKeyConstraint baseColumnNames="partner_id"
                                 baseTableName="party"
                                 constraintName="fk_party__partner_id"
                                 referencedColumnNames="id"
                                 referencedTableName="partner"/>

        <addForeignKeyConstraint baseColumnNames="person_id"
                                 baseTableName="party"
                                 constraintName="fk_party__person_id"
                                 referencedColumnNames="id"
                                 referencedTableName="person"/>
    </changeSet>
</databaseChangeLog>
